# ==============================================================================
# MERCURY CONFIGURATION
# ==============================================================================
# Cache TTL - How long to keep odds in Redis cache for delta detection
# Must be longer than polling interval to avoid false positives
# Examples: 5m, 300s, 10m
# Default: 5m (recommended for 60s poll interval)
MERCURY_CACHE_TTL=5m
# Logging
MERCURY_LOG_LEVEL=info

# Metrics
MERCURY_ENABLE_METRICS=true

